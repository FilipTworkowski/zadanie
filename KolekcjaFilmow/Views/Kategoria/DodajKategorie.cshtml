@model Kategorie
@{
    ViewData["Title"] = "Dodaj Kategorię filmu";
}

<div class="text-center mb-5">
    <h1 class="display-4">Dodaj Gatunek Filmu</h1>
</div>
<div class="mx-auto col-4 ">
    <form asp-controller="Kategoria" asp-action="DodajKategorie" method="post">
        <div class="form-group pb-3">
            <label for="NazwaKategorii">Nazwa Gatunku</label>
            <input type="text" class="form-control" id="NazwaKategorii" asp-for="Nazwa" placeholder="Wprowadź nazwę gatunku filmu" />
        </div>
        <button type="submit" class="btn btn-primary">Dodaj</button>
    </form>
</div>