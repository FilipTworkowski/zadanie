@model Filmy
@{
    ViewData["Title"] = "Dodaj Film";
}

<div class="text-center mb-5">
    <h1 class="display-4">Dodaj Film</h1>
</div>
<div class="mx-auto col-4 ">
    <form asp-controller="Film" asp-action="DodajFilm" method="post">
        <div class="form-group pb-3">
            <label for="NazwaFilmu">Nazwa</label>
            <input type="text" class="form-control" id="NazwaFilmu" asp-for="Tytul" placeholder="Wprowadź nazwę filmu" />
        </div>
        <div class="form-group pb-3">
            <label for="Rezyser">Reżyser</label>
            <input type="text" class="form-control" id="Rezyser" asp-for="Rezyser" placeholder="Wprowadź reżysera filmu" />
        </div>
        <div class="form-group pb-3">
            <label for="Gatunek">Gatunek</label>
            <select class="form-control" id="Gatunek" asp-for="IdGatunek">
                @{
                    foreach (Kategorie kategorie in ViewBag.Gatunek)
                    {
                        <option value="@kategorie.IdKategoria">@kategorie.Nazwa</option>
                    }
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Dodaj</button>
    </form>
</div>